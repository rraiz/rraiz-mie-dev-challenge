<%- include('partials/header.ejs') %>

<div class="bg-[#fffcec] min-h-screen">
  <div class="flex justify-center items-center p-4">
    <h2 class="text-2xl font-bold">Add New Game</h2>
  </div>

  <!-- Add Game Form -->
  <form action="/add-game" method="POST" class="max-w-lg mx-auto p-4 bg-white rounded-lg shadow-lg">
    <div class="mb-4">
      <label for="name" class="block text-lg font-semibold">Game Name:</label>
      <input type="text" id="name" name="name" class="p-2 border rounded w-full" required />
    </div>

    <div class="mb-4">
      <label for="thumbnail" class="block text-lg font-semibold">Thumbnail URL:</label>
      <input type="text" id="thumbnail" name="thumbnail" class="p-2 border rounded w-full" required />
    </div>

    <div class="mb-4">
      <label for="min_players" class="block text-lg font-semibold">Minimum Players:</label>
      <input type="number" id="min_players" name="min_players" class="p-2 border rounded w-full" required />
    </div>

    <div class="mb-4">
      <label for="max_players" class="block text-lg font-semibold">Maximum Players:</label>
      <input type="number" id="max_players" name="max_players" class="p-2 border rounded w-full" required />
    </div>

    <div class="mb-4">
      <label for="last_played" class="block text-lg font-semibold">Last Played (Date):</label>
      <input type="date" id="last_played" name="last_played" class="p-2 border rounded w-full" required />
    </div>

    <div class="mb-4">
      <label for="times_played" class="block text-lg font-semibold">Times Played:</label>
      <input type="number" id="times_played" name="times_played" class="p-2 border rounded w-full" required />
    </div>

    <div class="flex justify-center mt-4">
      <button type="submit" class="bg-teal-500 hover:bg-teal-400 text-white py-2 px-6 rounded-md font-semibold">Add Game</button>
    </div>
  </form>
</div>
